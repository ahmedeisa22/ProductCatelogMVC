
@model UserVM

@{
    ViewData["Title"] = "Register";
}.


<div class="border-0 card shadow my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Register</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
          
            <div class="mb-3 row p-1">
                <label class="p-0">User Name </label>
                <input type="text" asp-for="@Model.UserName" class="form-control border-0 shadow" />
                <span class="text-danger" asp-validation-for="@Model.UserName"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Email</label>
                <input type="text" asp-for="@Model.email" class="form-control border-0 shadow" />
                <span class="text-danger" asp-validation-for="@Model.email"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Password</label>
                <input type="password" asp-for="@Model.Password" class="form-control border-0 shadow" />
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Confirm Password</label>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control border-0 shadow" />
                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
            </div>
            <div class="row mb-4 mt-5">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Sign Up</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}

