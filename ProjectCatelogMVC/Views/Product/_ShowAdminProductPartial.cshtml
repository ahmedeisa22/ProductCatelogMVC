@model List<ProductVM>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Duration</th>
            <th>CreationDate</th>
            <th>StartDate</th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item != null)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Duration</td>
                    <td>@item.CreationDate</td>
                    <td>@item.StartDate</td>

                    <td>
                        <div class="w-85 btn-group" role="group">
                            <a asp-action="Details" class="btn btn-primary mx-2" asp-route-id="@item.Id">
                                <i class="fas fa-info-circle"></i>Details
                            </a>
                            <a asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@item.Id">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>

                </tr>
            }
        }
    </tbody>

</table>